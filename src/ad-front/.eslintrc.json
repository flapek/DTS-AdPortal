{
    "env": {
        "browser": false,
        "es6": true,
        "jest": true,
        "node": true
    },
    "rules": {
        "no-console": "error",
        "import/first": "error",
        "react/prop-types": "off"
    },
    "extends": [
        "react-app",
        "react-app/jest",
        "eslint:recommended",
        "plugin:import/errors",
        "plugin:react/recommended",
        "plugin:jsx-a11y/recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:react-hooks/recommended",
        "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "root": true,
    "plugins": [
        "react",
        "import",
        "jsx-a11y",
        "@typescript-eslint"
    ],
    "parserOptions": {
        // "tsconfigRootDir": "./",
        "ecmaVersion": 13,
        "ecmaFeatures": {
            "jsx": true
        },
        // "project": "./tsconfig.json",
        "sourceType": "module"
    },
    "settings": {
        "react": {
            "pragma": "React",
            "version": "detect"
        },
        "import/resolver": {
            "node": {
                "extensions": [
                    ".js",
                    ".jsx",
                    ".ts",
                    ".tsx"
                ]
            }
        }
    }
}